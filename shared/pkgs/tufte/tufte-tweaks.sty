\newcommand{\gsign}[1]{
  \ifthenelse{#1 > 0}{
    \ifthenelse{#1 = 1}{+}{+#1}
  }{
    \ifthenelse{#1 = -1}{-}{#1}
  }
}

\newcommand{\invgsign}[1]{
  \ifthenelse{#1 > 0}{
    \ifthenelse{#1 = 1}{-}{-#1}
  }{
    \ifthenelse{#1 = -1}{+}{-\left( #1 \right)}
  }
}

