% Math-mode only 

% sin(a+b)
\newcommand{\eSinOfSum}[2]{
  \sin #1\cdot\cos #2 + \cos #1\cdot\sin #2
}
\newcommand{\fSinOfSum}[2]{
  \sin(#1 + #2) = \eSinOfSum{#1}{#2}
}
\newcommand{\eSinTwoX}[1]{
  2\cdot\sin #1\cdot\cos #1
}
\newcommand{\fSinTwoX}[1]{
  \sin 2#1 = \eSinTwoX{#1}
}
% sin(a-b)
\newcommand{\eSinOfDiff}[2]{
  \sin #1\cdot\cos #2 - \cos #1\cdot\sin #2
}
\newcommand{\fSinOfDiff}[2]{
  \sin(#1 - #2) = \eSinOfDiff{#1}{#2}
}

% cos(a+b)
\newcommand{\eCosOfSum}[2]{
  \cos #1\cdot\cos #2 - \sin #1\cdot\sin #2
}
\newcommand{\fCosOfSum}[2]{
  \cos(#1 + #2) = \eCosOfSum{#1}{#2}
}
\newcommand{\eCosTwoX}[1]{
  \cos^{2} #1 - \sin^{2} #1
}
\newcommand{\fCosTwoX}[1]{
  \cos 2#1 = \eCosTwoX{#1}
}
% cos(a-b)
\newcommand{\eCosOfDiff}[2]{
  \cos #1\cdot\cos #2 + \sin #1\cdot\sin #2
}
\newcommand{\fCosOfDiff}[2]{
  \cos(#1 - #2) = \eCosOfDiff{#1}{#2}
}

% cos A + cos B
\newcommand{\eSumOfCos}[2]{
  2\cos\left(\dfrac{#1 + #2}{2}\right)\cos\left(\dfrac{#1-#2}{2}\right)
}
\newcommand{\fSumOfCos}[2]{
  \cos #1 + \cos #2 = \eSumOfCos{#1}{#2}
}

% cos A - cos B
\newcommand{\eDiffOfCos}[2]{
  2\sin\left(\dfrac{#1 + #2}{2}\right)\sin\left(\dfrac{#2-#1}{2}\right)
}
\newcommand{\fDiffOfCos}[2]{
  \cos #1 - \cos #2 = \eDiffOfCos{#1}{#2}
}

% 2cosAcosB
\newcommand{\eProdOfCos}[2]{
  \cos\left( #1 + #2\right) + \cos\left( #1 - #2\right)
}

\newcommand{\fProdOfCos}[2]{
  2\cdot\cos #1\cdot\cos #2 = \eProdOfCos{#1}{#2}
}

% sin A + sin B
\newcommand{\eSumOfSin}[2]{
  2\sin\left(\dfrac{#1 + #2}{2}\right)\cos\left(\dfrac{#1-#2}{2}\right)  
}
\newcommand{\fSumOfSin}[2]{
  \sin #1 + \sin #2 = \eSumOfSin{#1}{#2}
}

% sin A - sin B
\newcommand{\eDiffOfSin}[2]{
  2\cos\left(\dfrac{#1 + #2}{2}\right)\sin\left(\dfrac{#1-#2}{2}\right)
}
\newcommand{\fDiffOfSin}[2]{
  \sin #1 - \sin #2 = \eDiffOfSin{#1}{#2}
}

% 2sinAsinB
\newcommand{\eProdOfSin}[2]{
  \cos\left( #1 - #2\right) - \cos\left( #1 + #2\right)
}

\newcommand{\fProdOfSin}[2]{
  2\cdot\sin #1\cdot\sin #2 = \eProdOfSin{#1}{#2}
}

% tan (A+B)
\newcommand{\eTanOfSum}[2]{
  \dfrac{\tan #1 + \tan #2}{1-\tan #1\cdot\tan #2}
}
\newcommand{\fTanOfSum}[2]{
  \tan(#1 + #2) = \eTanOfSum{#1}{#2}
}

% tan (A-B)
\newcommand{\eTanOfDiff}[2]{
  \dfrac{\tan #1 - \tan #2}{1+\tan #1\cdot\tan #2}
}
\newcommand{\fTanOfDiff}[2]{
  \tan(#1 - #2) = \eTanOfDiff{#1}{#2}
}

% 2cosAsinB
\newcommand{\eProdCosSin}[2]{
  \sin\left( #1 + #2 \right) - \sin\left( #1 - #2\right)
}
\newcommand{\fProdCosSin}[2]{
  2\cdot\cos #1\cdot\sin #2 = \eProdCosSin{#1}{#2}
}

% 2sinAcosB
\newcommand{\eProdSinCos}[2]{
  \sin\left( #1 + #2\right) + \sin\left( #1-#2 \right)
}
\newcommand{\fProdSinCos}[2]{ 
  2\cdot\sin #1\cdot\cos #2 = \eProdSinCos{#1}{#2}
}

