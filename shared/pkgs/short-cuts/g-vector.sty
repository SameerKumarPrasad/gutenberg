\newcommand{\WRITEVEC}[3] { % if arguments are [a,b,c] then ai + bj + ck
   \ifnumequal{#1}{0}{}{
		\ifnumgreater{#1}{0}{ +{#1}\hat{i} }{ {#1}\hat{i} }
   }
   \ifnumequal{#2}{0}{}{
		\ifnumgreater{#2}{0}{ +{#2}\hat{j} }{ {#2}\hat{j} }
   }
   \ifnumequal{#3}{0}{}{
		\ifnumgreater{#3}{0}{ +{#3}\hat{k} }{ {#3}\hat{k} }
   }
}

\newcommand{\WRITEVECGENERAL}[3] { % if arguments are [a,b,c] then ai + bj + ck
  {#1}\hat{i} + {#2}\hat{j} + {#3}\hat{k}
}

\newcommand\RENDERCOMPONENT[2]{ % #1 = value, #2 = one of i,j or k
  \ifnumcomp{#1}{>}{0}{
    \ABSVALUE{#1}\abs
    \ifnumcomp\abs{=}{1}{+\hat{#2}}{+{#1}\hat{#2}}
  }{
    \ifnumcomp{#1}{=}{0}{}{
      \ABSVALUE{#1}\abs
      \ifnumcomp\abs{=}{1}{-\hat{#2}}{{#1}\hat{#2}}
    }
  }
} 

\newcommand\WRITEVECTOR[3]{ % writes a properly formatted vector
  \RENDERCOMPONENT{#1}{i}\RENDERCOMPONENT{#2}{j}\RENDERCOMPONENT{#3}{k}
}

\newcommand\EDOTPRODUCT[2]{ % expression for dot product 
  \vert\,\vec{#1}\,\vert\cdot\vert\,\vec{#2}\,\vert\cos\theta_{{#1}{#2}}
}
