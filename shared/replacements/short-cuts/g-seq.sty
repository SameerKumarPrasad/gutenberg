% Sum of AP
\newcommand{\fSumOfAP}[1] {
  S_{#1} = \dfrac{#1}{2}\cdot\left( 2a + (#1 - 1)\cdot d\right)
} 
\newcommand{\eSumOfAP}[1] {
  \dfrac{#1}{2}\cdot\left( 2a + (#1 - 1)\cdot d\right)
} 

% Term of an AP
\newcommand{\fTermOfAP}[1] {
  T_{#1} = a + (#1 - 1)\cdot d
}
\newcommand{\eTermOfAP}[1] {
  a + (#1 - 1)\cdot d
}

