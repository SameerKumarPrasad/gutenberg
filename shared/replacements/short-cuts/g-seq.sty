% Math-mode only 
% Each command takes one mandatory and one optional (default = 0) argument
% If the 1st arguement (default) is = 0, then the terms of the series are written w/o a subsscript
% If its non-zero, then terms are written with first argument subscript

% Sum of AP
\newcommand{\fSumOfAP}[2][0] {
  \ifthenelse{#1 = 0}{
    S_{#2} = \dfrac{#2}{2}\cdot\left( 2a + (#2 - 1)\cdot d\right)
  }{
    S_{#2} = \dfrac{#2}{2}\cdot\left( 2a_{#1} + (#2 - 1)\cdot d_{#1}\right)
  }
} 
\newcommand{\eSumOfAP}[2][0] {
  \ifthenelse{#1 = 0}{
    \dfrac{#2}{2}\cdot\left( 2a + (#2 - 1)\cdot d\right)
  }{
    \dfrac{#2}{2}\cdot\left( 2a_{#1} + (#2 - 1)\cdot d_{#1}\right)
  }
} 

% Term of an AP
\newcommand{\fTermOfAP}[2][0] {
  \ifthenelse{#1 = 0}{
    T_{#2} = a + (#2 - 1)\cdot d
  }{
    T_{#2} = a_{#1} + (#2 - 1)\cdot d_{#1}
  }
}
\newcommand{\eTermOfAP}[2][0] {
  \ifthenelse{#1 = 0}{
    a + (#2 - 1)\cdot d
  }{
    a_{#1} + (#2 - 1)\cdot d_{#1}
  }
}

% Summation n
\newcommand{\eSumOfN}[1]{
  \dfrac{#1\cdot(#1+1)}{2}
}
\newcommand{\fSumOfN}[1]{
  S_{#1} = \eSumOfN{#1}
}

% Summation n^2
\newcommand{\eSumOfNSquare}[1]{
  \dfrac{1}{6}\cdot\left[ #1 \cdot(#1 + 1)\cdot(2#1 + 1) \right]
}
\newcommand{\fSumOfNSquare}[1]{
  S_{#1} = \eSumOfNSquare{#1}
}
% Summation n^3
\newcommand{\eSumOfNCube}[1]{
  \left( \dfrac{#1\cdot(#1 +1)}{2} \right)^2
}
\newcommand{\fSumOfNCube}[1]{
  S_{#1} = \eSumOfNCube{#1}
}

