\newcommand{\abhinav}[3] { % if arguments are [a,b,c] then ai + bj + ck
   \ifnumequal{#1}{0}{}{
		\ifnumgreater{#1}{0}{ +{#1}\hat{i} }{ {#1}\hat{i} }
   }
   \ifnumequal{#2}{0}{}{
		\ifnumgreater{#2}{0}{ +{#2}\hat{j} }{ {#2}\hat{j} }
   }
   \ifnumequal{#3}{0}{}{
		\ifnumgreater{#3}{0}{ +{#3}\hat{k} }{ {#3}\hat{k} }
   }
}




